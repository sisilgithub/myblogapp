
<% provide(:title, 'All users') %>
<ol class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to 'Home', root_path %></li>
  <li class="breadcrumb-item"><%= link_to current_user.name, current_user%></li>
  <li class="breadcrumb-item active">All Users</li>
</ol>

<div class="row">
  <div class="col-md-9">
    <div class="well">
      <h1>All Users</h1>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'Show', user %></td>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New User', new_user_path %>
    </div>
  </div>

  <div class="col-md-3">
    <%= render('static_pages/trending')%>
  </div>
</div>

