<div class="row">
  <div class="panel panel-default" id="emailnewsletter">
    <div class="panel-heading" >
      <span class="fa fa-envelope fa-2x text-muted" aria-hidden="true" ></span>
      <p style="display: inline-block; font-size: 20px;">EMAIL NEWSLETTER</p>
    </div>
    <div class="panel-body">
      <p class="text-muted">Subscribe to recieve inspiration, ideas and news in  your inbox</p>
      <%=form_for(:subscriber , :url=> '') do |f| %>
        <div class="input-group"  style="width :100%;">
          <%= f.hidden_field "subscribable_type", value: "Report" %>
          <div class="col-md-8 col-xs-8">
            <%= f.text_field :email , :value=> "", :class=>"form-control",:style=>"background-color: white;" , :placeholder=>"Put your email" , :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}'%> 
          </div>
          <div class="col-md-4 col-xs-4" style="padding: 0px 5px 0px 5px; ">
            <button type="submit" class="btn btn-default" style="width:100%; background-color: #ff3d00;color: white; font-weight: bold;">Submit</button>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>